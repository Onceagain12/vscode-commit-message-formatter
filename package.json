{
  "name": "commit-message-formatter",
  "displayName": "Commit Message Formatter",
  "description": "",
  "version": "0.0.1",
  "preview": true,
  "publisher": "adam-bender",
  "license": "MIT",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "git",
    "vcs",
    "commit"
  ],
  "repository": {
    "url": "https://github.com/bendera/vscode-commit-message-formatter"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "git-commit"
      }
    ],
    "configuration": {
      "title": "Commit Message Formatter",
      "properties": {
        "commit-message-formatter.subjectMode": {
          "type": "string",
          "enum": [
            "truncate",
            "truncate-ellipses",
            "split",
            "split-ellipses"
          ],
          "default": "truncate"
        },
        "commit-message-formatter.collapseMultipleEmptyLines": {
          "type": "boolean",
          "default": false
        },
        "commit-message-formatter.protectedPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "#",
            "Signed-off-by:",
            "Co-authored-by:"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@bendera/commit-message-formatter": "^0.7.0"
  }
}
